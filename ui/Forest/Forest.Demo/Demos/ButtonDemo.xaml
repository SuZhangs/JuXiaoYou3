<UserControl x:Class="Acorisoft.FutureGL.Forest.Demos.ButtonDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Acorisoft.FutureGL.Forest.Demos"
             xmlns:fui="urn:acorisoft/forest/ui"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <ScrollViewer>
        <UniformGrid Columns="2">
            <Border Background="White" Padding="8">
                <StackPanel>
                    <fui:HighlightButton Content="Test" Margin="4"/>
                    <fui:HighlightButton Content="Disabled" IsEnabled="False" Margin="4"/>
                </StackPanel>
            </Border>
            <Border Background="Black" Padding="8">
                <StackPanel>
                    <fui:HighlightButton Content="Test" Margin="4"/>
                    <fui:HighlightButton Content="Disabled" IsEnabled="True" Margin="4"/>
                </StackPanel>
            </Border>
        </UniformGrid>
    </ScrollViewer>
</UserControl>
