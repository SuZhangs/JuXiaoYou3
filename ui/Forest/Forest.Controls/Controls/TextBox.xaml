    <Style TargetType="{x:Type c:SingleLine}" BasedOn="{StaticResource ClearStyle.TextBox}">
    </Style>
    <Style TargetType="{x:Type c:MultiLine}" BasedOn="{StaticResource ClearStyle.TextBox}" />
</ResourceDictionary>