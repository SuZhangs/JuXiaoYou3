            </DockPanel>
        </DockPanel>
    </DataTemplate>


    <!--
        @ param: GroupBlock
        @ member:
            1. RadioBlock
            2. SequenceBlock
            3. GroupBlock
            4. OptionItem
    -->

    <DataTemplate DataType="{x:Type subTemp:SequenceBlockDataUI}">
        <DockPanel Margin="0 0 0 12">
            <TextBlock DockPanel.Dock="Top"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0 0 0 8"
                       VerticalAlignment="Center">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0}（{1}）">
                        <Binding Path="Name" />
                        <Binding Path="Value" Mode="OneWay" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>

            <ListBox ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ItemsSource="{Binding Items}"
                     VerticalAlignment="Stretch"
                     VerticalContentAlignment="Top"
                     DisplayMemberPath="Value"
                     SelectedValuePath="Value"
                     SelectedValue="{Binding Value,Mode=TwoWay}">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
        </DockPanel>
    </DataTemplate>

    <DataTemplate DataType="{x:Type subTemp:GroupBlockDataUI}">
        <DockPanel Margin="0 0 0 12">
            <TextBlock DockPanel.Dock="Top"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0 0 0 16"
                       Text="{Binding Name}"
                       VerticalAlignment="Center" />

            <ItemsControl ItemsSource="{Binding Items}"
                          VerticalAlignment="Stretch"
                          VerticalContentAlignment="Top">
            </ItemsControl>
        </DockPanel>
    </DataTemplate>


    <!--
        @ param: ChartBlock
        @ member:
            1. RadarBlock
            2. HistogramBlock
    -->


    <DataTemplate DataType="{x:Type subTemp:RadarBlockDataUI}">
        <DockPanel Margin="0 0 0 12">
            <TextBlock DockPanel.Dock="Top"
                       FontSize="15"
                       FontWeight="Bold"
                       Margin="0 0 0 4"
                       Text="{Binding Name}"
                       VerticalAlignment="Center" />
            <DockPanel>
                
                <studio:RadarChart Axis="{Binding Axis,Mode=OneWay}"
                                   Data="{Binding Data,Mode=OneWay}"
                                   Maximum="{Binding Maximum}"
                                   Color="{Binding Color}"
                                   Height="160"
                                   Width="160"
                                   ShowAxisName="False" />

                <ItemsControl ItemsSource="{Binding Value}"
                              Margin="16 0 0 0"
                              VerticalAlignment="Center">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type subTemp:BindableAxis}">
                            <DockPanel>
                                <f:Slider Interval="1"
                                        IsSnapToTickEnabled="True"
                                        Value="{Binding Value,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                        Maximum="{Binding Maximum}"
                                        Minimum="0" />

                                <TextBlock Margin="16 0 0 0"
                                           Text="{Binding Name}"
                                           VerticalAlignment="Center" />
                            </DockPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </DockPanel>
        </DockPanel>
    </DataTemplate>

    <DataTemplate DataType="{x:Type subTemp:HistogramBlockDataUI}">
        <DockPanel Margin="0 0 0 12">
            <TextBlock DockPanel.Dock="Top"
                       FontSize="15"
                       FontWeight="Bold"
                       Margin="0 0 0 4"
                       Text="{Binding Name}"
                       VerticalAlignment="Center" />
            <DockPanel>
                <studio:HistogramChart Axis="{Binding Axis,Mode=OneWay}"
                                       Data="{Binding Data,Mode=OneWay}"
                                       Maximum="{Binding Maximum}"
                                       Color="{Binding Color}"
                                       Height="160"
                                       Width="160" />

                <ItemsControl ItemsSource="{Binding Value}"
                              Margin="16 0 0 0"
                              VerticalAlignment="Center">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type subTemp:BindableAxis}">
                            <DockPanel>
                                <f:Slider Interval="1"
                                        IsSnapToTickEnabled="True"
                                        Value="{Binding Value,Mode=TwoWay}"
                                        Maximum="{Binding Maximum}"
                                        Minimum="0" />

                                <TextBlock Margin="16 0 0 0"
                                           Text="{Binding Name}"
                                           VerticalAlignment="Center" />
                            </DockPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </DockPanel>
        </DockPanel>
    </DataTemplate>
</ResourceDictionary>