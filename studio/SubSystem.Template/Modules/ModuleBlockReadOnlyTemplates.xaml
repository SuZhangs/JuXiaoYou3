    <!--
        @ param: TargetBlock
        @ member:
            1. AudioBlock
            2. VideoBlock
            3. MusicBlock
            4. FileBlock
            5. ImageBlock
            6. ReferenceBlock
    -->
    <DataTemplate DataType="{x:Type subTemp:AudioBlockDataUI}">
        <DockPanel Margin="0 0 0 12">
            <TextBlock DockPanel.Dock="Top"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="0 0 0 8"
                       Text="{Binding Name}" />

            <studio:ReferenceControl Icon="{StaticResource Audio}"
                                     IsFilled="True"
                                     DisplayName="{Binding TargetName,Mode=TwoWay}"
                                     Source="{Binding TargetSource,Mode=TwoWay}" />
        </DockPanel>
    </DataTemplate>

