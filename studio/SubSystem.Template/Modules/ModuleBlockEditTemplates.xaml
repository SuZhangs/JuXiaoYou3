    <!--
        @ param: GroupBlock
        @ member:
            1. RadioBlock
            2. SequenceBlock
            3. GroupBlock
            4. OptionItem
    -->

    <DataTemplate DataType="{x:Type subTemp:SequenceBlockEditUI}">
        <Grid Background="Transparent" Width="960">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <StackPanel>
                <f:HeaderedSingleLine Margin="0 4"
                                      Text="{Binding Name,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      Header="名字" />

                <f:HeaderedSingleLine Margin="0 4"
                                      Text="{Binding Metadata,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      Header="喵喵咒语" />

                <f:HeaderedSingleLine Margin="0 4"
                                      IsReadOnly="True"
                                      Text="{Binding Fallback,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      Header="默认值" />

                <f:HeaderedMultiLine Margin="0 4"
                                     Header="提示"
                                     Height="128"
                                     Text="{Binding ToolTips,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                <f:ToggleSwitch Margin="0 4"
                                Content="值与名字不同？"
                                IsChecked="{Binding AllowDiffValue,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <f:ForestSection Grid.Column="1"
                             Header="元素">
                <f:ForestSection.ToolBar>
                    <StackPanel HorizontalAlignment="Right"
                                Orientation="Horizontal"
                                Margin="0 0 0 4">
                        <ftk:ToolButton Content="添加"
                                        Command="{Binding AddCommand}"
                                        Icon="{StaticResource FeatherIcon.Plus}"
                                        ShowText="True" />
                        <ftk:ToolButton Content="编辑"
                                        Command="{Binding EditCommand}"
                                        CommandParameter="{Binding ElementName=Item,Mode=OneWay,Path=SelectedItem}"
                                        Icon="{StaticResource FeatherIcon.Trash}"
                                        ShowText="True" />
                        <ftk:ToolButton Content="删除"
                                        Command="{Binding RemoveCommand}"
                                        CommandParameter="{Binding ElementName=Item,Mode=OneWay,Path=SelectedItem}"
                                        Icon="{StaticResource FeatherIcon.Trash}"
                                        ShowText="True" />
                        <ftk:ToolButton Content="上移"
                                        Command="{Binding UpCommand}"
                                        CommandParameter="{Binding ElementName=Item,Mode=OneWay,Path=SelectedItem}"
                                        Icon="{StaticResource FeatherIcon.Up}"
                                        ShowText="True" />
                        <ftk:ToolButton Content="下移"
                                        Command="{Binding DownCommand}"
                                        CommandParameter="{Binding ElementName=Item,Mode=OneWay,Path=SelectedItem}"
                                        Icon="{StaticResource FeatherIcon.Down}"
                                        ShowText="True" />
                    </StackPanel>
                </f:ForestSection.ToolBar>
                <f:ListBox x:Name="Item"
                           ItemsSource="{Binding Items,Mode=OneWay}">
                    <f:ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Margin="8"
                                       Text="{Binding Value,Mode=OneWay}"
                                       TextTrimming="CharacterEllipsis" />
                        </DataTemplate>
                    </f:ListBox.ItemTemplate>
                </f:ListBox>
            </f:ForestSection>
        </Grid>
    </DataTemplate>

