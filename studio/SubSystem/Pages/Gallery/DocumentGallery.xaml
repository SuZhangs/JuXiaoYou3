<UserControl x:Class="Acorisoft.FutureGL.MigaStudio.Pages.Gallery.DocumentGallery"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:this="clr-namespace:Acorisoft.FutureGL.MigaStudio.Pages.Gallery"
             xmlns:thisVM="clr-namespace:Acorisoft.FutureGL.MigaStudio.Pages.Gallery"
             xmlns:f="urn:acorisoft/forest/ui"
             xmlns:fs="urn:acorisoft/forest/shell"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type={x:Type thisVM:DocumentGalleryViewModel}, IsDesignTimeCreatable=True}">
    <Grid Margin="0 36 0 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="540" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <f:HighlightTextBox Grid.Column="1"/>
            
            <StackPanel Grid.Column="2"
                        Margin="48 0 0 0"
                        Orientation="Horizontal">
                <f:CallToAction Content="新建"
                                CornerRadius="20"
                                Palette="HighlightPalette2"
                                Width="128"/>
                <f:ForestIconButton Icon="{StaticResource FeatherIcon.Plus}"/>
                <f:ForestIconButton Icon="{StaticResource FeatherIcon.Plus}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
