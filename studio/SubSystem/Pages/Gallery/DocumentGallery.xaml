    <Grid Margin="0 36 0 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="64" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="540" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <!-- 操作 -->
            <StackPanel Grid.Column="0"
                        Margin="48 0 0 0"
                        Orientation="Horizontal">
                <f:ForestIconButton Icon="{StaticResource FeatherIcon.Filter}"
                                       IconSize="17"
                                       IsFilled="False"/>
                <f:ForestIconButton Icon="{StaticResource FeatherIcon.Plus}"
                                       IconSize="17"
                                       IsFilled="False"/>
            </StackPanel>
            
            <!-- 选项 -->
            <f:HighlightTextBox Grid.Column="1"/>
            
            <!-- 操作 -->
            <StackPanel Grid.Column="2"
                        Margin="48 0 0 0"
                        Orientation="Horizontal">
                <f:CallToAction Content="新建"
                                CornerRadius="20"
                                Command="{Binding NewDocumentCommand}"
                                Palette="HighlightPalette1"
                                Width="128"/>
                <ui:Button Content="导入"/>
                <ui:Button Content="导入"/>
            </StackPanel>
        </Grid>

        <!-- 分页 -->
        <Grid Grid.Row="1"
              Margin="16 0"
              VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="48" />
                <ColumnDefinition Width="48" />
                <ColumnDefinition Width="48" />
            </Grid.ColumnDefinitions>

            <f:ForestIconButton Grid.Column="1"
                                CornerRadius="48"
                                FocusVisualStyle="{x:Null}"
                                Focusable="False"
                                Icon="{StaticResource FeatherIcon.Left}"
                                IconSize="23"
                                IsTabStop="False"
                                Height="42"
                                Width="42"/>

            <TextBlock Grid.Column="2"
                       FontSize="16"
                       HorizontalAlignment="Center"
                       Text="{Binding PageIndex,Mode=OneWay}"
                       VerticalAlignment="Center"/>

            <f:ForestIconButton Grid.Column="3"
                                CornerRadius="48"
                                FocusVisualStyle="{x:Null}"
                                Focusable="False"
                                HorizontalAlignment="Left"
                                Icon="{StaticResource FeatherIcon.Right}"
                                IconSize="23"
                                IsTabStop="False"
                                Height="42"
                                Width="42"/>
        </Grid>
        
        <!-- 列表 -->
        <ScrollViewer Grid.Row="2"
                      Margin="32 0">
            <ItemsControl Focusable="False"
                          IsTabStop="False"
                          ItemsSource="{Binding Collection,Mode=OneWay}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
