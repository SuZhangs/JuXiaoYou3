        <DataTemplate DataType="{x:Type doc:DocumentCache}">
            <Border Background="{StaticResource Transparent}"
                    Cursor="Hand"
                    Margin="8">
                <DockPanel>
                    <Border DockPanel.Dock="Top"
                            CornerRadius="64"
                            Height="84"
                            Width="84">
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding Converter={StaticResource Avatar}}"/>
                        </Border.Background>
                    </Border>
                    
                    <TextBlock FontSize="14"
                               FontFamily="{StaticResource HeiTi}"
                               Margin="0 8 0 0"
                               HorizontalAlignment="Center"
                               Text="{Binding Name,Mode=OneWay}"/>
                </DockPanel>
            </Border>
