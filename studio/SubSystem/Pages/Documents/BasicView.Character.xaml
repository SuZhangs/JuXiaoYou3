<UserControl  x:Class="Acorisoft.FutureGL.MigaStudio.Pages.Documents.CharacterBasicView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Acorisoft.FutureGL.MigaStudio.Pages.Documents"
              xmlns:f="urn:acorisoft/forest/ui"
              xmlns:ftk="urn:acorisoft/forest/toolkits"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <HeaderedContentControl DockPanel.Dock="Top"
                                Header="基本信息（必选）"
                                Margin="0 8">
            <UniformGrid Columns="3">
                <f:HeaderedSingleLine Header="名字"
                                      Margin="4"/>
                
                <f:HeaderedSingleLine Header="性别"
                                      Margin="4"/>
                
                <f:HeaderedSingleLine Header="生日"
                                      Margin="4"/>
                
                <f:HeaderedSingleLine Header="年龄"
                                      Margin="4"/>

                <f:HeaderedSingleLine Header="身高（cm）"
                                      Margin="4"/>
                
                <f:HeaderedSingleLine Header="体重（kg）"
                                      Margin="4"/>
            </UniformGrid>
        </HeaderedContentControl>

        <f:ShadowTabControl Height="720">
            <f:ShadowTabItem Header="相册">
                <DockPanel Margin="0 16 0 0">
                    <StackPanel DockPanel.Dock="Top"
                                Orientation="Horizontal">
                        <ftk:ToolButton Content="添加"
                                        Icon="{StaticResource FeatherIcon.Plus}"
                                        ShowText="True"/>
                        <ftk:ToolButton Content="删除"
                                        Icon="{StaticResource FeatherIcon.Trash}"
                                        ShowText="True"/>
                    </StackPanel>

                    <Image/>
                </DockPanel>
            </f:ShadowTabItem>
            <f:ShadowTabItem Header="人物关系">
                <DockPanel Margin="0 16 0 0">
                    <StackPanel DockPanel.Dock="Top"
                                Orientation="Horizontal">
                        <ftk:ToolButton Content="添加"
                                        Icon="{StaticResource FeatherIcon.Plus}"
                                        ShowText="True"/>
                        <ftk:ToolButton Content="删除"
                                        Icon="{StaticResource FeatherIcon.Trash}"
                                        ShowText="True"/>
                    </StackPanel>

                    <Image/>
                </DockPanel>
            </f:ShadowTabItem>
            <f:ShadowTabItem Header="可选信息">
                <DockPanel Margin="0 16 0 0">
                    <StackPanel DockPanel.Dock="Top"
                                Orientation="Horizontal">
                        <ftk:ToolButton Content="添加"
                                        Icon="{StaticResource FeatherIcon.Plus}"
                                        ShowText="True"/>
                        <ftk:ToolButton Content="删除"
                                        Icon="{StaticResource FeatherIcon.Trash}"
                                        ShowText="True"/>
                    </StackPanel>

                    <Image/>
                </DockPanel>
            </f:ShadowTabItem>
            <f:CallToAction Palette="HighlightPalette1"
                            Content="Add"/>
        </f:ShadowTabControl>
    </DockPanel>
</UserControl >
