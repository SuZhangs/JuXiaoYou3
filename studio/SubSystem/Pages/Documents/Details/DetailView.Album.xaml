<UserControl x:Class="Acorisoft.FutureGL.MigaStudio.Pages.Documents.AlbumPartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Acorisoft.FutureGL.MigaStudio.Pages.Documents"
             xmlns:thisConverters="clr-namespace:Acorisoft.FutureGL.MigaStudio.Resources.Converters"
             xmlns:m="clr-namespace:Acorisoft.FutureGL.MigaStudio.Utilities"
             xmlns:f="urn:acorisoft/forest/ui"
             xmlns:ftk="urn:acorisoft/forest/toolkits"
             xmlns:gu="https://github.com/GuOrg/Gu.Wpf.FlipView"
             mc:Ignorable="d"
             d:DesignHeight="300" 
             d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type={x:Type local:AlbumPartViewModel}, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <thisConverters:ImageConverter x:Key="ImageConverter"/>
    </UserControl.Resources>
    <DockPanel>
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal">
            <ftk:ToolButton f:Language.Id="global.Add"
                            Content="添加"
                            Command="{Binding AddAlbumCommand}"
                            Icon="{StaticResource FeatherIcon.PlusCircle}"
                            ShowText="True" />
            
            <ftk:ToolButton f:Language.Id="global.Remove"
                            Content="删除"
                            Command="{Binding RemoveAlbumCommand}"
                            CommandParameter="{Binding SelectedAlbum,Mode=OneWay}"
                            Icon="{StaticResource FeatherIcon.MinusCircle}"
                            ShowText="True" />
            
            <ftk:ToolButton f:Language.Id="global.Up"
                            Content="上移"
                            Command="{Binding ShiftUpAlbumCommand}"
                            CommandParameter="{Binding SelectedAlbum,Mode=OneWay}"
                            Icon="{StaticResource FeatherIcon.ArrowUp}"
                            ShowText="True" />
            
            <ftk:ToolButton f:Language.Id="global.Down"
                            Content="下移"
                            Command="{Binding ShiftDownAlbumCommand}"
                            CommandParameter="{Binding SelectedAlbum,Mode=OneWay}"
                            Icon="{StaticResource FeatherIcon.ArrowDown}"
                            ShowText="True" />

            <ftk:ToolButton f:Language.Id="global.Preview"
                            Content="预览"
                            Command="{Binding OpenAlbumCommand}"
                            CommandParameter="{Binding SelectedAlbum,Mode=OneWay}"
                            Icon="{StaticResource FeatherIcon.Upload}"
                            ShowText="True" />
        </StackPanel>

        <DockPanel>
            <f:ListBox DockPanel.Dock="Right"
                       ItemsSource="{Binding Collection,Mode=OneWay}"
                       SelectedItem="{Binding SelectedAlbum,Mode=TwoWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type m:Album}">
                        <TextBlock Margin="8"
                                   Text="{Binding }"
                                   TextTrimming="CharacterEllipsis"
                                   VerticalAlignment="Center"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </f:ListBox>

            <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Visible"
                          Padding="12">
                <ContentControl Content="{Binding SelectedAlbum,Mode=OneWay}">
                    <ContentControl.ContentTemplate>
                        <DataTemplate DataType="{x:Type m:Album}">
                            <Image Stretch="UniformToFill"
                                   Source="{Binding Source,Mode=OneWay, Converter={StaticResource ImageConverter}}"/>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>
            </ScrollViewer>
            
        </DockPanel>
    </DockPanel>
</UserControl>
