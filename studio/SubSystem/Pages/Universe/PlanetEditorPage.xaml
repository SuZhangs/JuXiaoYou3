<f:ForestUserControl x:Class="Acorisoft.FutureGL.MigaStudio.Pages.Universe.PlanetEditorPage"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:this="clr-namespace:Acorisoft.FutureGL.MigaStudio.Pages.Documents"
                     xmlns:thisSubView="clr-namespace:Acorisoft.FutureGL.MigaStudio.Models"
                     xmlns:thisVM="clr-namespace:Acorisoft.FutureGL.MigaStudio.Pages.Universe"
                     xmlns:thisConverters="clr-namespace:Acorisoft.FutureGL.MigaStudio.Resources.Converters"
                     xmlns:studio="urn:acorisoft/studio"
                     xmlns:f="urn:acorisoft/forest/ui"
                     xmlns:ftk="urn:acorisoft/forest/toolkits"
                     mc:Ignorable="d"
                     d:DesignHeight="300" d:DesignWidth="300"
                     d:DataContext="{d:DesignInstance Type={x:Type thisVM:PlanetEditorViewModel}, IsDesignTimeCreatable=True}"
                     UseLayoutRounding="True"
                     SnapsToDevicePixels="True">
    <UserControl.Resources>
        <thisConverters:AvatarConverter x:Key="AvatarConverter" />

        <Style TargetType="{x:Type ftk:StateButton}">
            <Setter Property="CornerRadius" Value="3" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="Width" Value="84" />
            <Setter Property="Height" Value="100" />
            <Setter Property="IsFilled" Value="False" />
            <Setter Property="IconSize" Value="23" />
            <Setter Property="UseHighlight" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ftk:StateButton}">
                        <Border x:Name="PART_Bd"
                                BorderBrush="{f:Brush BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <DockPanel VerticalAlignment="Stretch"
                                       HorizontalAlignment="Stretch">
                                <Path x:Name="PART_Icon"
                                      DockPanel.Dock="Top"
                                      Data="{TemplateBinding Icon}"
                                      Stretch="Uniform"
                                      Margin="0 0 8 0"
                                      Width="{TemplateBinding IconSize}"
                                      Height="{TemplateBinding IconSize}" />

                                <ContentPresenter x:Name="PART_Content"
                                              TextElement.FontSize="14"
                                              TextElement.Foreground="#4F5B66"
                                              Content="{TemplateBinding Content}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}"
                                              ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center" />
                            </DockPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="160" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="360" />
        </Grid.ColumnDefinitions>

        <!-- 头像 -->
        <f:LooklessButton Grid.Column="0"
                          Grid.Row="0"
                          Command="{Binding ChangeAvatarCommand}"
                          Height="160"
                          Width="160">
            <Border>
                <Border.Background>
                    <ImageBrush>
                        <ImageBrush.ImageSource>
                            <MultiBinding Converter="{StaticResource AvatarConverter}">
                                <Binding Path="Avatar" Mode="OneWay" />
                                <Binding Path="Type" />
                            </MultiBinding>
                        </ImageBrush.ImageSource>
                    </ImageBrush>
                </Border.Background>
            </Border>
        </f:LooklessButton>


        <!-- 按钮 -->
        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Margin="8 16 8 8"
                    VerticalAlignment="Top">

            <ftk:ToolButton Content="{f:Language global.new}"
                            Command="{Binding NewDocumentCommand}"
                            Icon="{StaticResource FeatherIcon.File}"
                            ShowText="True" />

            <ftk:ToolButton Content="{f:Language global.open}"
                            Command="{Binding OpenDocumentCommand}"
                            Icon="{StaticResource FeatherIcon.Folder}"
                            ShowText="True" />

            <ftk:ToolButton Content="{f:Language global.save}"
                            Command="{Binding SaveDocumentCommand}"
                            Icon="{StaticResource FeatherIcon.Save}"
                            ShowText="True" />

            <ftk:ToolButton Content="传统模式"
                            Command="{Binding SaveDocumentCommand}"
                            Icon="{StaticResource FeatherIcon.Edit}"
                            ShowText="True" />
        </StackPanel>


        <!-- 基本信息 -->
        <ftk:TabControl Grid.Column="1"
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Margin="16 0">
            <ftk:TabItem Header="基础信息">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <WrapPanel Grid.Row="0">
                        <ftk:StateButton Content="树类"/>
                        <ftk:StateButton Content="草本"/>
                        <ftk:StateButton Content="藤蔓"/>
                        <ftk:StateButton Content="多肉"/>
                        <ftk:StateButton Content="苔藓"/>
                        <ftk:StateButton Content="蕨类"/>
                        <ftk:StateButton Content="藻类"/>
                        <ftk:StateButton Content="菌类"/>
                    </WrapPanel>
                    <WrapPanel Grid.Row="1">
                        <ftk:StateButton Content="食材"/>
                        <ftk:StateButton Content="药材"/>
                        <ftk:StateButton Content="加工"/>
                        <ftk:StateButton Content="观赏"/>
                        <ftk:StateButton Content="调味"/>
                        <ftk:StateButton Content="染色"/>
                        <ftk:StateButton Content="香料"/>
                    </WrapPanel>
                    <UniformGrid Grid.Row="2"
                                 Columns="4">
                        <f:HeaderedSingleLine Header="名字"
                                  Margin="8" />

                        <f:HeaderedSingleLine Header="类型"
                                  Margin="8" />

                        <f:HeaderedSingleLine Header="稀有度"
                                  Margin="8" />
                        <f:HeaderedSingleLine Header="售价"
                                  Margin="8" />
                        <f:HeaderedSingleLine Header="获得方式"
                                  Margin="8" />
                        <f:HeaderedMultiLine Header="简介"
                                 Margin="8" />
                        <f:HeaderedSingleLine Header="攻击力"
                                  Margin="8" />
                        <f:HeaderedSingleLine Header="元素"
                                  Margin="8" />
                    </UniformGrid>


                    <!-- 词条 -->
                    <f:HeaderedMultiLine Grid.Row="3"
                                         Header="简介"
                                         Margin="8" />

                </Grid>
            </ftk:TabItem>
            <ftk:TabItem Header="基础信息">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <WrapPanel Grid.Row="0">
                        <ftk:StateButton Content="树类"/>
                        <ftk:StateButton Content="草本"/>
                        <ftk:StateButton Content="藤蔓"/>
                        <ftk:StateButton Content="多肉"/>
                        <ftk:StateButton Content="苔藓"/>
                        <ftk:StateButton Content="蕨类"/>
                        <ftk:StateButton Content="藻类"/>
                        <ftk:StateButton Content="菌类"/>
                    </WrapPanel>
                    <WrapPanel Grid.Row="1">
                        <ftk:StateButton Content="食材"/>
                        <ftk:StateButton Content="药材"/>
                        <ftk:StateButton Content="加工"/>
                        <ftk:StateButton Content="观赏"/>
                        <ftk:StateButton Content="调味"/>
                        <ftk:StateButton Content="染色"/>
                        <ftk:StateButton Content="香料"/>
                    </WrapPanel>
                    <UniformGrid Grid.Row="2"
                                 Columns="4">
                        <f:HeaderedSingleLine Header="名字"
                                  Margin="8" />

                        <f:HeaderedSingleLine Header="类型"
                                  Margin="8" />

                        <f:HeaderedSingleLine Header="稀有度"
                                  Margin="8" />
                        <f:HeaderedSingleLine Header="售价"
                                  Margin="8" />
                        <f:HeaderedSingleLine Header="获得方式"
                                  Margin="8" />
                        <f:HeaderedMultiLine Header="简介"
                                 Margin="8" />
                        <f:HeaderedSingleLine Header="攻击力"
                                  Margin="8" />
                        <f:HeaderedSingleLine Header="元素"
                                  Margin="8" />
                    </UniformGrid>


                    <!-- 词条 -->
                    <f:HeaderedMultiLine Grid.Row="3"
                                         Header="简介"
                                         Margin="8" />

                </Grid>
            </ftk:TabItem>
            <ftk:TabItem Header="词条">

                <f:ForestIsland Header="词条"
                            Margin="8">
                    <f:ForestIsland.ToolBar>
                        <StackPanel Margin="32 0 0 0"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">

                            <ftk:ToolButton Content="{f:Language global.add}"
                                        Command="{Binding NewDocumentCommand}"
                                        Icon="{StaticResource FeatherIcon.PlusCircle}"
                                        ShowText="True" />

                            <ftk:ToolButton Content="{f:Language global.remove}"
                                        Command="{Binding OpenDocumentCommand}"
                                        Icon="{StaticResource FeatherIcon.Trash}"
                                        ShowText="True" />
                        </StackPanel>
                    </f:ForestIsland.ToolBar>
                    <ScrollViewer>
                        <ItemsControl ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel ItemWidth="420" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <f:HeaderedSingleLine Header="简介" Margin="0 8 8 8" />
                            <f:HeaderedSingleLine Header="简介" Margin="0 8 8 8" />
                            <f:HeaderedSingleLine Header="简介" Margin="0 8 8 8" />
                            <f:HeaderedSingleLine Header="简介" Margin="0 8 8 8" />
                        </ItemsControl>
                    </ScrollViewer>
                </f:ForestIsland>
            </ftk:TabItem>
        </ftk:TabControl>


        <!-- 词条 -->
        <DockPanel Grid.Column="1"
                   Grid.Row="1"
                   Margin="32 0 0 0">
        </DockPanel>

        <!-- 材料 -->
        <f:ForestSection Grid.Column="2"
                         Grid.Row="0"
                         Grid.RowSpan="2"
                         Header="材料"
                         Margin="16 0">
            <f:ForestSection.ToolBar>
                <StackPanel Margin="32 0 0 4"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">

                    <ftk:ToolButton Command="{Binding NewDocumentCommand}"
                                    Icon="{StaticResource FeatherIcon.PlusCircle}" />

                    <ftk:ToolButton Command="{Binding OpenDocumentCommand}"
                                    Icon="{StaticResource FeatherIcon.Clear}" />
                </StackPanel>
            </f:ForestSection.ToolBar>
            <ItemsControl>
                <DockPanel>
                    <Border Height="48"
                            Width="48">
                        <Border.Background>
                            <ImageBrush>
                                <ImageBrush.ImageSource>
                                    <MultiBinding Converter="{StaticResource AvatarConverter}">
                                        <Binding Path="Avatar" Mode="OneWay" />
                                        <Binding Path="Type" />
                                    </MultiBinding>
                                </ImageBrush.ImageSource>
                            </ImageBrush>
                        </Border.Background>
                    </Border>
                    <DockPanel Margin="16 0 0 0">
                        <TextBlock DockPanel.Dock="Top"
                                   FontSize="16"
                                   Margin="4 0 0 0"
                                   Text="材料1" />
                        <studio:RatingControl Value="3"
                                              Maximum="5" />
                    </DockPanel>
                </DockPanel>
            </ItemsControl>
        </f:ForestSection>
    </Grid>
</f:ForestUserControl>
