    <Border Background="White"
            Height="480"
            Width="480"
            Padding="32">
        <Grid VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="48" />
            </Grid.RowDefinitions>

            <Image Source="{StaticResource NoData}"
                   Height="192"
                   Width="192"/>

            <TextBlock Grid.Row="1"
                       Foreground="Gray" 
                       FontSize="16"
                       Margin="16"
                       Text="当前页面没有数据，点击下面的按钮添加初始数据"
