<UserControl x:Class="Acorisoft.FutureGL.MigaStudio.Views.QuickStartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Acorisoft.FutureGL.MigaStudio.Pages.Lobby"
             xmlns:vm="clr-namespace:Acorisoft.FutureGL.MigaStudio.ViewModels"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:f="urn:acorisoft/forest/ui"
             mc:Ignorable="d"
             d:DesignHeight="720" 
             d:DesignWidth="1280"
             d:DataContext="{d:DesignInstance Type={x:Type vm:QuickStartController}, IsDesignTimeCreatable=True}">
    <Grid>
        <!-- 模糊图层 -->
        <Rectangle x:Name="PART_BlurBG">
            <Rectangle.Effect>
                <BlurEffect Radius="30" RenderingBias="Performance" />
            </Rectangle.Effect>
            <Rectangle.Fill>
                <ImageBrush ImageSource="E:\1.jpg"
                                    Stretch="None"
                                    Viewport="0,0,1,1"
                                    Viewbox="0,0,0.8,0.8" />
            </Rectangle.Fill>
        </Rectangle>


        <!-- 背景叠加层 -->
        <Rectangle x:Name="PART_MaskBG">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0 0" EndPoint="1 1">
                    <GradientStop Color="#4A000000" Offset="0" />
                    <GradientStop Color="#5A000000" Offset="0.7" />
                    <GradientStop Color="#6A000000" Offset="0.8" />
                    <GradientStop Color="#7A000000" Offset="1" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        
        <Border Background="White"
                CornerRadius="24"
                HorizontalAlignment="Center"
                Padding="32"
                VerticalAlignment="Center">
            <Grid Height="540"
                  Width="420">

                <StackPanel>
                    
                    <ui:TextBox Margin="0 0 0 8"
                                PlaceholderText="世界观名称"
                                PlaceholderEnabled="True"
                                Text="{Binding Name,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                    <ui:TextBox Margin="0 8"
                                PlaceholderText="世界观外文名（拼音或者英文）"
                                PlaceholderEnabled="True"
                                Text="{Binding ForeignName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                    <ui:TextBox Margin="0 8"
                                PlaceholderText="作者名称"
                                PlaceholderEnabled="True"
                                Text="{Binding Author,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

                    <f:HighlightButton Content="新建"
                                       Command="{Binding CreateCommand}"
                                       Margin="0 8"
                                       Palette="HighlightPalette2"/>
                    <f:HighlightButton Content="打开"
                                       Margin="0 8"
                                       Palette="HighlightPalette2"/>
                    <f:HighlightButton Content="导入"
                                       Margin="0 8"
                                       Palette="HighlightPalette2"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>