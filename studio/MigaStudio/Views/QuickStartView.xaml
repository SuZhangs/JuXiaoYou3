<UserControl x:Class="Acorisoft.FutureGL.MigaStudio.Views.QuickStartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:Acorisoft.FutureGL.MigaStudio.ViewModels"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:f="urn:acorisoft/forest/ui"
             xmlns:fs="urn:acorisoft/forest/shell"
             xmlns:studio="urn:acorisoft/studio"
             mc:Ignorable="d"
             f:Language.Root="quickstart"
             Foreground="{f:ForegroundInHighlightBrush}"
             d:DesignHeight="720"
             d:DesignWidth="1280"
             d:DataContext="{d:DesignInstance Type={x:Type vm:QuickStartController}, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
         <Style x:Key="MainTitleTemplate" TargetType="TextBlock">
             <Setter Property="FontSize" Value="18"/>
             <Setter Property="FontWeight" Value="Bold"/>
             <Setter Property="FontFamily" Value="{StaticResource SongTi}"/>
            <Setter Property="Margin" Value="0 8"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style x:Key="SubTitleTemplate" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource SongTi}"/>
            <Setter Property="LineHeight" Value="18"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <Style x:Key="NormalIcon" TargetType="Path">
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="Width" Value="64"/>
            <Setter Property="Height" Value="64"/>
            <Setter Property="StrokeThickness" Value="4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="LargeIcon" TargetType="Path">
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="Width" Value="84"/>
            <Setter Property="Height" Value="84"/>
            <Setter Property="StrokeThickness" Value="4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <Grid Background="#D9D9D9">

        <!-- 模糊图层 -->
        <!--<Rectangle x:Name="PART_BlurBG">
            <Rectangle.Fill>
                <ImageBrush ImageSource="E:\bg_2.png" />
            </Rectangle.Fill>
        </Rectangle>-->

        <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
            <StackPanel>

                <f:TilePanel HorizontalAlignment="Left"
                             TileWidth="210"
                             TileHeight="280"
                             Gap="10">
                    <studio:QuickStartPane f:TilePanel.H="1"
                                           f:TilePanel.W="2"
                                           Accent="#ffab12"
                                           HeaderTemplate="{x:Null}">
                        <studio:QuickStartPane.Header>
                            <StackPanel Margin="16">
                                <TextBlock f:Language.Id="quickstart.newButton"
                                           Style="{StaticResource MainTitleTemplate}"
                                           Text="新建世界观" />
                                <TextBlock f:Language.Id="quickstart.newButton.tips"
                                           Style="{StaticResource SubTitleTemplate}"
                                           Text="点击这里新建一个新的世界观，从头创造新世界！"/>
                            </StackPanel>
                        </studio:QuickStartPane.Header>
                        <Path Data="{StaticResource FeatherIcon.File}"
                              Style="{StaticResource NormalIcon}"
                              Stroke="#ffab12"
                              StrokeThickness="6"
                              Height="96"
                              Width="96" />
                    </studio:QuickStartPane>

                    <studio:QuickStartPane f:TilePanel.H="1"
                                           f:TilePanel.W="1"
                                           Accent="#bec936"
                                           HeaderTemplate="{x:Null}">
                        <studio:QuickStartPane.Header>
                            <StackPanel Margin="16 8 16 12">
                                <TextBlock f:Language.Id="quickstart.openButton"
                                           Style="{StaticResource MainTitleTemplate}"
                                           Text="打开世界观" />
                                <TextBlock f:Language.Id="quickstart.openButton.tips"
                                           Style="{StaticResource SubTitleTemplate}"
                                           Text="打开已经创建的世界观，可以继续编辑！"/>
                            </StackPanel>
                        </studio:QuickStartPane.Header>

                        <Path Data="{StaticResource FeatherIcon.Folder}"
                              Style="{StaticResource NormalIcon}"
                              Stroke="#bec936"/>
                    </studio:QuickStartPane>


                    <studio:QuickStartPane f:TilePanel.H="1"
                                           f:TilePanel.W="1"
                                           Accent="#6a5acd"
                                           HeaderTemplate="{x:Null}">
                        <studio:QuickStartPane.Header>
                            <StackPanel Margin="16 8 16 12">
                                <TextBlock f:Language.Id="quickstart.upgradeButton"
                                           Style="{StaticResource MainTitleTemplate}"
                                           Text="升级旧世界观" />
                                <TextBlock f:Language.Id="quickstart.upgradeButton.tips"
                                           Style="{StaticResource SubTitleTemplate}"
                                           Text="如果您曾经使用过橘小柚，点击这里可以升级过去创建的世界观！"/>
                            </StackPanel>
                        </studio:QuickStartPane.Header>
                        <Path Data="{StaticResource FeatherIcon.Update}"
                              Style="{StaticResource NormalIcon}"
                              Stroke="#6a5acd"/>
                    </studio:QuickStartPane>
                </f:TilePanel>


                <f:TilePanel HorizontalAlignment="Left"
                             TileWidth="210"
                             TileHeight="280"
                             Gap="10">

                    <studio:QuickStartPane f:TilePanel.H="1"
                                           f:TilePanel.W="1"
                                           Accent="#CF4747"
                                           HeaderTemplate="{x:Null}">
                        <studio:QuickStartPane.Header>
                            <StackPanel Margin="16 8 16 12">
                                 <TextBlock f:Language.Id="quickstart.feedbackButton"
                                                    Style="{StaticResource MainTitleTemplate}"
                                                    Text="BUG反馈" />
                                <TextBlock f:Language.Id="quickstart.feedbackButton.tips"
                                           Style="{StaticResource SubTitleTemplate}"
                                           Text="软件或多或少都会有BUG，请务必跟我们反馈！我们将会及时的修复这些BUG！"/>
                            </StackPanel>
                        </studio:QuickStartPane.Header>
                        <Path Data="{StaticResource IC.Bug}"
                              Style="{StaticResource LargeIcon}"/>
                    </studio:QuickStartPane>

                    <studio:QuickStartPane f:TilePanel.H="1"
                                           f:TilePanel.W="1"
                                           Accent="#0092f2"
                                           HeaderTemplate="{x:Null}">
                        <studio:QuickStartPane.Header>
                            <StackPanel Margin="16 8 16 12">
                                <TextBlock f:Language.Id="quickstart.guideButton"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Margin="0 8"
                                           Text="浏览教程" />
                                <TextBlock f:Language.Id="quickstart.guideButton.tips"
                                           FontFamily="{StaticResource SongTi}"
                                           LineHeight="18"
                                           Text="橘小柚的上手难度有点高，为了能够获得更好的创作体验，我们建议浏览软件的教程。"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </studio:QuickStartPane.Header>
                        <Path Data="{StaticResource IC.Play}"
                              Style="{StaticResource NormalIcon}"
                              Stroke="#0092f2"
                              Height="96"
                              Width="96" />
                    </studio:QuickStartPane>

                    <studio:QuickStartPane f:TilePanel.H="1"
                                           f:TilePanel.W="1"
                                           Accent="#9f6ce6"
                                           HeaderTemplate="{x:Null}">
                        <studio:QuickStartPane.Header>
                            <StackPanel Margin="16 8 16 12">
                                <TextBlock f:Language.Id="quickstart.sponsorButton"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Margin="0 8"
                                           Text="赞助我们" />
                                <TextBlock f:Language.Id="quickstart.sponsorButton.tips"
                                           FontFamily="{StaticResource SongTi}"
                                           LineHeight="18"
                                           Text="一个项目的运转需要资金，赞助我们可以让我们有更多的条件去尝试新功能！"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </studio:QuickStartPane.Header>
                        <Image Source="pack://application:,,,/Forest.Fonts;component/afd.png"
                               Stretch="Uniform"
                               Height="64"
                               Width="64" />
                    </studio:QuickStartPane>


                    <studio:QuickStartPane f:TilePanel.H="1"
                                           f:TilePanel.W="1"
                                           Accent="#0eb0c9"
                                           HeaderTemplate="{x:Null}">
                        <studio:QuickStartPane.Header>
                            <StackPanel Margin="16 8 16 12">
                                <TextBlock f:Language.Id="quickstart.contractButton"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Margin="0 8"
                                           Text="联系我们" />
                                <TextBlock f:Language.Id="quickstart.contractButton.tips"
                                           FontFamily="{StaticResource SongTi}"
                                           LineHeight="18"
                                           Text="如果您有什么需求或者好的建议，都可以联系我们！我们会很高兴您的到来！"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </studio:QuickStartPane.Header>
                        <Path Data="{StaticResource FeatherIcon.Chat}"
                              Style="{StaticResource LargeIcon}"
                              Stroke="#0eb0c9"/>
                    </studio:QuickStartPane>
                </f:TilePanel>
            </StackPanel>
        </ScrollViewer>

        <fs:TitleBar VerticalAlignment="Top" />
    </Grid>
</UserControl>